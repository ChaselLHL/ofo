/* pages/my/index.wxss */
.container{
  background-color: #f2f2f2;
  width:100%;
  height: 100vh;
}
.user-info{
  padding-top: 60rpx;
  background-color: #fff;
}
.user-info image{
  display: block;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 0 auto;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .2);
}
.user-info .user-name{
  display: block;
  padding: 30rpx 0;
  text-align: center;
  margin: 60rpx 0;
}
.my-wallet{
  padding: 30rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}
button{
  position: absolute;
  bottom: 60rpx;
  width: 90%;
  left: 5%;
}